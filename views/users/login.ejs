<% layout("/layouts/boilerplate") %>
<article>
  <section>
    <div class="container register-box mt-5 mb-5">
      <h3 class="p-4 text-center fw-bold">Log In To Your Account</h3>
      <div class="ps-5 pe-5 pb-5">
        <form method="POST" action="/login" novalidate class="needs-validation">
          <div class="mb-4">
            <label class="form-label fw-medium">Username</label>
            <input
              type="text"
              class="form-control border-secondary"
              name="username"
              id="username"
              required
            />
            <div class="invalid-feedback">Please enter Username</div>
          </div>
          <div class="mb-4">
            <label class="form-label fw-medium">Password</label>
            <input
              type="password"
              class="form-control border-secondary fw-bold"
              name="password"
              id="exampleInputPassword1"
              required
            />
            <div class="invalid-feedback">Please enter password</div>
          </div>
          <button
            type="submit"
            class="btn btn-warning w-100 fs-5 fw-semibold"
          >
            Log In
          </button>
          <p class="mt-3 text-center">
            Not a Member? <a class="text-decoration-none" href="/register">Register Now!</a>
          </p>
        </form>
      </div>
    </div>
  </section>
</article>

