<% layout("/layouts/boilerplate") %>

<article>
    <section>
      <div class="container-fluid register-box mt-5 mb-5">
        <h3 class="p-4 text-center fw-bold">Ask For Help</h3>
        <div class="ps-5 pe-5 pb-5">
          <form method="POST" action="/complaint" novalidate class="needs-validation">
            <div class="mb-4">
              <label class="form-labe fw-medium">Title</label>
              <input type="text" class="form-control border border-black" name="complain[title]" required />
              <div class="invalid-feedback">Please enter title</div>
            </div>
            <div class="mb-4">
              <label class="form-label fw-medium">Description</label>
              <textarea
                class="form-control border border-black"
                placeholder="Describe" name="complain[description]"
                rows="5" required
              ></textarea>
              <div class="invalid-feedback">Please enter Description</div>
            </div>
            <button
              type="submit"
              class="btn btn-warning w-100 fs-5 fw-semibold"
            >
              Send
            </button>
          </form>
        </div>
      </div>
    </section>
  </article>