<% layout("/layouts/boilerplate") %>

<article>
  <section class="mt-5 mb-5">
    <div class="d-flex justify-content-around align-items-baseline">
      <div class="w-50">
        <div
          class="d-flex justify-content-between align-items-center ps-2 pe-2 pt-2 image-head"
        >
          <div><h5><%= listing.title %></h5></div>
          <div>
            <h5 class="bg-warning p-2">
              RM <%= listing.price.toLocaleString("en-IN") %>
            </h5>
          </div>
        </div>
        <img src="<%= listing.image %>" alt="" class="mt-3 w-100" />
      </div>
      <div class="border border-dark w-25">
        <h6 class="bg-secondary border border-dark p-2">Bid Information</h6>
        <div class="text-center">
          <div class="d-flex justify-content-around">
            <p>Current Bid:</p>
            <p>RM 0</p>
          </div>
          <button class="btn btn-primary w-75 fw-semibold">Pre-Bid</button
          ><br />
          <button
            class="mt-2 mb-3 btn btn-light border border-dark w-75 fw-semibold"
          >
            Add to WatchList
          </button>
        </div>
      </div>
    </div>
  </section>

  <section class="mt-5 mb-5 car-overview">
    <div class="text-center pt-4 pb-3">
