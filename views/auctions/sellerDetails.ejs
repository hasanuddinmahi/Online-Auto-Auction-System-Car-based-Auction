<% layout("/layouts/boilerplate") %>

<article>
  <section class="mt-5 mb-5">
      <div class="container">
          <div class="row">
              <div class="col-lg-4 col-md-6 col-12">
                  <p>
                      <i class="fa-solid fa-circle-user fa-xl"></i> <%= user.username %>
                  </p>
                  <p>
                      <i class="fa-solid fa-phone fa-lg"></i> +60 <%= user.phoneNumber %>
                  </p>
                  <p>
                      <i class="fa-solid fa-envelope"></i> <%= user.email %>
                  </p>
                  <p>
                    <i class="fa-solid fa-location-dot fa-lg"></i> <%= user.location %>
                  </p>
              </div>
              <div class="col-lg-8 col-md-6 col-12">
                  <h3>All Reviews</h3>
                  <div class="row">
                      <% for(let review of user.reviews ){ %>
                      <div class="card col-lg-3 col-md-4 col-12 ms-lg-3 ms-md-2 mb-3">
                          <div class="card-body">
                              <h5 class="card-title">@<%= review.author.username %></h5>
                              <p class="card-text"><%= review.comment %></p>
                              <p class="starability-result" data-rating="<%= review.rating %>">
                                  Rated: <%= review.rating %> stars
                              </p>
                          </div>
                      </div>
                      <% } %>
                  </div>
              </div>
          </div>
      </div>
  </section>
</article>
